<ExistingUser>:
    name: 'ExistingUser'
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'images/background-4.jpg'

    FloatLayout:

        Image:
            source: 'images/icon-patient-2.png'
            size: 128, 128
            pos_hint: {'center_x': 0.5, 'center_y': 0.8}
        
        Label:
            text: 'Log In'
            color: [0.65,0.65,0.65,1]
            pos_hint: {'center_x': 0.5, 'center_y': 0.6}
            font_size: 0.5*self.height
            size_hint: 0.3, 0.1

        TextInput:
            id: pId
            multiline: False
            hint_text: 'Patient ID'
            size_hint: 0.3, 0.075
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            font_size: 0.4*self.height
            border: (3,3,3,3)
            allow_copy: False

        TextInput:
            id: pin
            multiline: False
            password: True
            hint_text: 'PIN'
            size_hint: 0.3, 0.075
            pos_hint: {'center_x': 0.5, 'center_y': 0.4}
            font_size: 0.4*self.height
            allow_copy: False
            border: (3,3,3,3)

        Button:
            text: 'Log In'
            size_hint: 0.3, 0.075
            pos_hint: {'center_x': 0.5, 'center_y': 0.3}
            font_size: 0.4*self.height
            background_color: [0.466,0.705,0.976, 0.8]
            color: (1,1,1,1)
            #on_release: root.manager.current = 'HomePage'
        
        Button:
            text: 'Forgot Patient ID?'
            size_hint: 0.3, 0.075
            pos_hint: {'center_x': 0.5, 'center_y': 0.23}
            background_color: [0.466,0.705,0.976, 0]
            font_size: 0.3*self.height
            color: (0.475,0.313,0.117,1)

        Button:
            pos_hint: {'center_x': 0.5, 'center_y': 0.1}
            on_press: root.manager.current = 'NavScreen'
            size_hint: 0.1, 0.075
            background_color: [0.65,0.65,0.65,0.5]
            text: 'Back'