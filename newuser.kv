<NewUser>:
    name: 'NewUser'
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'images/background.jpg'
    
    FloatLayout:

        Label:
            text: 'Fill the details to join'
            size_hint: 0.3, 0.1
            pos_hint: {'center_x': 0.5, 'center_y': 0.95}
            font_size: 0.4*self.height

        TextInput:
            id: name_newUser
            hint_text: 'Name'
            size_hint: 0.3, 0.06
            multiline: False
            pos_hint: {'center_x': 0.5, 'center_y': 0.85}
            font_size: 0.4*self.height

        Label:
            id: name_error
            text: ''
            color: [0.86,0.078, 0.235,0.8]
            pos_hint: {'center_x': 0.5, 'center_y': 0.80}
            size_hint: 0.2, 0.06
            font_size: 0.37*self.height
        
        TextInput:
            id: age_newUser
            hint_text: 'Age'
            size_hint: 0.3, 0.06
            multiline: False
            pos_hint: {'center_x': 0.5, 'center_y': 0.75}
            font_size: 0.4*self.height

        Label:
            id: age_error
            text: ''
            color: [0.86,0.078, 0.235,0.8]
            pos_hint: {'center_x': 0.5, 'center_y': 0.70}
            size_hint: 0.2, 0.06
            font_size: 0.37*self.height
            
        GridLayout:
            cols: 2
            spacing: '8dp'
            size_hint: .3, None
            pos_hint: {'center_x': 0.5, 'center_y': 0.65}
            height: self.minimum_height
            ToggleButton:
                size_hint_y: None
                on_press: app.root.ids.api.gender = 'Male'
                height: '30dp'
                text: 'Male'
                group: 'g1'
            ToggleButton:
                size_hint_y: None
                on_press: app.root.ids.api.gender = 'Female'
                height: '30dp'
                text: 'Female'
                group: 'g1'
        
        Label:
            id: gender_error
            text: ''
            color: [0.86,0.078, 0.235,0.8]
            pos_hint: {'center_x': 0.5, 'center_y': 0.60}
            size_hint: 0.2, 0.06
            font_size: 0.37*self.height

        TextInput:
            id: dob_newUser
            hint_text: 'Date of Birth'
            size_hint: 0.3, 0.06
            multiline: False
            pos_hint: {'center_x': 0.5, 'center_y': 0.55}
            font_size: 0.4*self.height

        Label:
            id: dob_error
            text: ''
            color: [0.86,0.078, 0.235,0.8]
            pos_hint: {'center_x': 0.5, 'center_y': 0.50}
            size_hint: 0.2, 0.06
            font_size: 0.37*self.height

        TextInput:
            id: pin_newUser
            hint_text: 'PIN'
            allow_copy: False
            size_hint: 0.3, 0.06
            password: True
            multiline: False
            pos_hint: {'center_x': 0.5, 'center_y': 0.45}
            font_size: 0.4*self.height

        Label:
            id: pin_error
            text: ''
            color: [0.86,0.078, 0.235,0.8]
            pos_hint: {'center_x': 0.5, 'center_y': 0.40}
            size_hint: 0.2, 0.06
            font_size: 0.37*self.height
        
        Button:
            text: 'Submit'
            size_hint: 0.3, 0.1  
            pos_hint: {'center_x': 0.5, 'center_y': 0.3}  
            font_size: 0.4*self.height
            background_color: (0,0,0,0)
            on_press: app.root.ids.api.sendDataToRealTimeDb(name_newUser.text, age_newUser.text, dob_newUser.text, pin_newUser.text)
            on_release: 
                root.update_status()
                if(root.aE == 1): age_error.text = 'Age must be in numeric form.'
                elif(root.aE == 2): age_error.text = "This field can't be empty."
                else: age_error.text = ''
                if(root.nE == 2): name_error.text = "This field can't be empty."
                else: name_error.text = ''
                if(root.dE == 1): dob_error.text = "Please check the date format again."
                elif(root.dE == 2): dob_error.text =  "This field can't be empty."
                else: dob_error.text = ''
                if(root.pE == 1): pin_error.text = "Pin must be of 4 digits only."
                elif(root.pE == 2): pin_error.text =  "This field can't be empty."
                else: pin_error.text = ''
                if(root.gE == 2): gender_error.text = "You must choose one choice."
                else: gender_error.text = ''
                if(root.status == 1):  root.manager.current = 'tempPage'
                else: root.manager.current = 'NewUser'

        Button:
            pos_hint: {'center_x': 0.5, 'center_y': 0.1}
            on_press: root.manager.current = 'NavScreen'
            size_hint: 0.1, 0.1
            background_color: (1,1,1,0)
            text: 'Back'